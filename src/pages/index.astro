---
import DefaultLayout from '../layouts/DefaultLayout.astro';
import Nav from '../components/nav/Nav.astro';
import Hero from '../components/hero/Hero.astro';
import Services from '../components/services/Services.astro';
import Paquetes from '../components/paquetes/Paquetes.astro';
import Proceso from '../components/proceso/Proceso.astro';
import Portfolio from '../components/portfolio/Portfolio.astro';
import ContactSection from '../components/form/ContactSection.astro';
import FAQ from '../components/faq/FAQ.astro';
import CTA from '../components/cta/CTA.astro';
import Testimonios from '../components/testimonios/Testimonios.astro';
