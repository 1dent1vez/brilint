>
  <Nav />

  <main class="bg-brilint-bg">
    <Hero />
    <Services />
    <Paquetes />
    <Proceso />
    <Portfolio />
    <ContactSection />
    <Testimonios />
    <FAQ />
    <CTA />
  </main>

  <Footer />
</DefaultLayout>
