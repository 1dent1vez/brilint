---
import Container from '../ui/Container.astro';
import SectionTitle from '../ui/SectionTitle.astro';
import { servicios } from '../../data/servicios.js';
---

<section id="servicios" class="py-section-y bg-brilint-bg">
  <Container>
    <SectionTitle
      title="Servicios digitales para que dejes de perder clientes"
      subtitle="Brilint combina desarrollo web, campañas y soporte tecnológico para que tu negocio tenga una presencia online sólida y sistemas que no te fallen cuando más los necesitas."
    />

    <div class="grid gap-6 md:grid-cols-2 xl:grid-cols-3">
      {servicios.map((servicio) => (
        <article
          class="rounded-2xl border border-brilint-border bg-brilint-surface/60 p-6 hover:border-brilint-accent/60 transition duration-fast"
        >
          <h3 class="text-lg font-semibold mb-2">{servicio.titulo}</h3>
          <p class="text-sm text-brilint-muted mb-4">
            {servicio.descripcion}
          </p>
          <ul class="space-y-1.5 text-sm text-brilint-muted">
            {servicio.bullets.map((bullet) => (
              <li>• {bullet}</li>
            ))}
          </ul>
        </article>
      ))}
    </div>
  </Container>
</section>
