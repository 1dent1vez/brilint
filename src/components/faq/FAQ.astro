---
import Container from '../ui/Container.astro';
import SectionTitle from '../ui/SectionTitle.astro';
import { faqs } from '../../data/faqs.js';
---

<section id="faq" class="py-14 md:py-section-y bg-brilint-bg">
  <Container>
    <SectionTitle
      title="Preguntas frecuentes"
      subtitle="Dudas que suelen salir antes de empezar. Si tienes otra, solo escríbeme y la resolvemos directo."
    />

    <div class="space-y-3 sm:space-y-4">
      {faqs.map((faq) => (
        <details
          class="group rounded-2xl border border-brilint-border bg-brilint-surface/70 px-4 py-3 sm:px-5 sm:py-4"
        >
          <summary class="flex cursor-pointer items-center justify-between gap-3 text-sm sm:text-base font-medium text-brilint-text">
            <span class="text-left">{faq.pregunta}</span>

            <span class="flex items-center justify-center h-6 w-6 rounded-full border border-brilint-border text-[11px] text-brilint-muted group-open:hidden">
              +
            </span>
            <span class="flex items-center justify-center h-6 w-6 rounded-full border border-brilint-border text-[11px] text-brilint-muted hidden group-open:flex">
              −
            </span>
          </summary>

          <div class="mt-2 text-xs sm:text-sm leading-relaxed text-brilint-muted">
            {faq.respuesta}
          </div>
        </details>
      ))}
    </div>
  </Container>
</section>
