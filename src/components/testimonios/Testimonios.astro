---
import Container from '../ui/Container.astro';
import SectionTitle from '../ui/SectionTitle.astro';
import { testimonios } from '../../data/testimonios.js';
---

<section id="testimonios" class="py-14 md:py-section-y bg-brilint-bg">
  <Container>
    <SectionTitle
      title="Personas y negocios que ya están viendo resultados"
      subtitle="Testimonios reales de proyectos donde se mezclan desarrollo, redes y soporte para que todo funcione mejor en el día a día."
    />

    <!-- MOBILE: carrusel horizontal -->
    <div class="flex gap-4 overflow-x-auto snap-x snap-mandatory pb-3 md:hidden">
      {testimonios.map((t) => (
        <article
          class="min-w-[85%] snap-center relative h-full rounded-2xl border border-brilint-border bg-brilint-surface/80 p-5 flex flex-col justify-between transition duration-200 active:scale-[0.98]"
        >
          <p class="text-sm text-brilint-muted mb-4 leading-relaxed">
            “{t.mensaje}”
          </p>

          <div class="mt-auto pt-1">
            <p class="text-sm font-semibold text-brilint-text">
              {t.nombre}
            </p>
            <p class="text-xs text-brilint-muted">
              {t.rol}
            </p>
            <p class="mt-2 text-[11px] text-brilint-muted/80">
              {t.tipoProyecto} · {t.zona}
            </p>
          </div>
        </article>
      ))}
    </div>

    <!-- DESKTOP: grid original mejorado -->
    <div class="hidden md:grid gap-6 md:grid-cols-3">
      {testimonios.map((t) => (
        <article class="relative h-full rounded-2xl border border-brilint-border bg-brilint-surface/70 p-6 flex flex-col">
          <p class="text-sm text-brilint-muted mb-4 leading-relaxed">
            “{t.mensaje}”
          </p>

          <div class="mt-auto">
            <p class="text-sm font-semibold text-brilint-text">
              {t.nombre}
            </p>
            <p class="text-xs text-brilint-muted">
              {t.rol}
            </p>
            <p class="mt-2 text-xs text-brilint-muted/80">
              {t.tipoProyecto} · {t.zona}
            </p>
          </div>
        </article>
      ))}
    </div>
  </Container>
</section>
