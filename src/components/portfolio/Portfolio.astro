---
import Container from '../ui/Container.astro';
import SectionTitle from '../ui/SectionTitle.astro';
import PortfolioSlider from '../../react/PortfolioSlider.jsx';
import { proyectos } from '../../data/portfolio.js';
---

<section id="portfolio" class="py-section-y bg-brilint-surface">
  <Container>
    <SectionTitle
      title="Algunos proyectos recientes"
      subtitle="Una muestra de trabajos realizados en landing pages, redes e infraestructura y soporte para negocios reales de la zona."
    />

    <div class="mb-10">
      <PortfolioSlider proyectos={proyectos} client:load />
    </div>

    <div class="grid gap-4 md:grid-cols-3 text-sm text-brilint-muted">
      {proyectos.map((p) => (
        <div class="rounded-xl border border-brilint-border bg-brilint-bg/60 p-4">
          <p class="text-xs uppercase tracking-[0.18em] mb-1 text-brilint-muted/80">
            {p.tipo}
          </p>
          <h4 class="text-sm font-semibold text-brilint-text mb-1">
            {p.titulo}
          </h4>
          <p class="mb-1">{p.descripcion}</p>
          <p class="text-xs text-brilint-muted/80">
            Zona: {p.zona}
          </p>
        </div>
      ))}
    </div>
  </Container>
</section>
