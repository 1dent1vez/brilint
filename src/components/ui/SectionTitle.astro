---
const { title, subtitle } = Astro.props;
---

<div class="mb-10 md:mb-12 text-center px-3 sm:px-2 space-y-3 md:space-y-4">
  <h2 class="text-3xl sm:text-4xl md:text-4xl font-display font-semibold leading-tight leading-[1.15]">
    {title}
  </h2>
  {subtitle && (
    <p class="text-sm md:text-base text-brilint-muted max-w-2xl mx-auto leading-relaxed">
      {subtitle}
    </p>
  )}
</div>
