---
import Container from '../ui/Container.astro';
import Button from '../ui/Button.astro';

const links = [
  { href: '#servicios', label: 'Servicios' },
  { href: '#paquetes', label: 'Paquetes' },
  { href: '#proceso', label: 'Proceso' },
  { href: '#portfolio', label: 'Portafolio' },
  { href: '#testimonios', label: 'Testimonios' },
  { href: '#faq', label: 'FAQ' },
];
---

<header class="fixed top-0 inset-x-0 z-30 border-b border-brilint-border/60 backdrop-blur-md bg-brilint-bg/80">
  <Container className="flex h-16 items-center justify-between px-1 sm:px-0">
    <a href="#top" class="inline-flex items-center gap-2">
      <span class="h-2 w-2 rounded-full bg-brilint-accent"></span>
      <span class="font-display text-lg font-semibold tracking-tight">
        Brilint
      </span>
    </a>

    <!-- NAV ESCRITORIO -->
    <nav class="hidden md:flex items-center gap-8 text-sm text-brilint-muted">
      {links.map((link) => (
        <a
          href={link.href}
          class="hover:text-brilint-text transition duration-fast rounded-full px-2 py-1"
        >
          {link.label}
        </a>
      ))}
    </nav>

    <!-- CTA ESCRITORIO + MENÚ MÓVIL -->
    <div class="flex items-center gap-3">
      <div class="hidden md:block">
        <Button
          href="https://wa.me/527292392198?text=Hola,%20me%20interesa%20una%20cotización%20con%20Brilint"
          variant="primary"
        >
          Hablar por WhatsApp
        </Button>
      </div>

      <!-- MENÚ MÓVIL -->
      <details class="relative md:hidden">
        <summary
          class="list-none inline-flex h-10 w-10 items-center justify-center rounded-full border border-brilint-border bg-brilint-surface/90 text-brilint-text cursor-pointer shadow-brilint-soft"
          aria-label="Abrir menú de navegación"
        >
          <span class="flex flex-col gap-1.5">
            <span class="h-0.5 w-4 rounded bg-brilint-text"></span>
            <span class="h-0.5 w-4 rounded bg-brilint-text"></span>
          </span>
        </summary>

        <div
          class="absolute right-0 mt-3 w-[min(88vw,17rem)] rounded-2xl border border-brilint-border bg-brilint-bg/95 shadow-lg shadow-black/40 p-3"
        >
          <nav class="flex flex-col">
            {links.map((link) => (
              <a
                href={link.href}
                class="px-4 py-2.5 text-sm text-brilint-muted hover:text-brilint-text hover:bg-brilint-surface/70 transition rounded-xl"
              >
                {link.label}
              </a>
            ))}

            <div class="mt-2 border-t border-brilint-border/60 pt-2">
              <a
                href="https://wa.me/527292392198?text=Hola,%20me%20interesa%20una%20cotización%20con%20Brilint"
                class="mx-1 mt-1 inline-flex w-[calc(100%-0.5rem)] items-center justify-center rounded-lg bg-brilint-accent px-3 py-2 text-xs font-semibold text-brilint-bg hover:bg-brilint-accent/90 transition"
              >
                Hablar por WhatsApp
              </a>
            </div>
          </nav>
        </div>
      </details>
    </div>
  </Container>
</header>
